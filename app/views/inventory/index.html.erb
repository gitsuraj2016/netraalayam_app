<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">

    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Inventory
          <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            
            </li>
          </ol>
        </section>
        <section class="content">
          <div class="col-md-6">
            <div class="box">
              <div class="box-header with-border">
                <h3 class="box-title">Frame (<%= @frame.count if @frame.present? %>)</h3>
                <%= link_to 'New Frame', new_frame_path , { class: "btn btn-primary newAddBtn"}%>
                <%= link_to 'Frames', frames_path , { class: "btn btn-primary newAddBtn"}%>

              </div>
              <div class="box-header with-border">
                <h3 class="box-title">Lens (<%= @len.count if @len.present? %>)</h3>
                <%= link_to 'New Lens', new_len_path , { class: "btn btn-primary newAddBtn"}%>
                 <%= link_to 'Lens', lens_path , { class: "btn btn-primary newAddBtn"}%>

              </div>

              <div class="box-header with-border">
                <h3 class="box-title">Sunglasse (<%= @sunglasse.count if @sunglasse.present? %>)</h3>
                <%= link_to 'New Sunglasse', new_sunglass_path , { class: "btn btn-primary newAddBtn"}%>
                <%= link_to 'Sunglasses', sunglasses_path , { class: "btn btn-primary newAddBtn"}%>

              </div>

              <div class="box-header with-border">
                <%= link_to 'Generate BarCode', inventory_barcode_generate_path , { class: "btn btn-primary newAddBtn"}%>

              </div>
              <!-- /.box-header -->
              <div class="box-body">
                
              </div>
            </div>
            <!-- /.box -->
          </div>
          <br>
        </section>
      </div>
    </div>
  </body>

