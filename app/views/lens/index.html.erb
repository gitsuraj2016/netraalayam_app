<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">

    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Dashboard
          <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
            </li>
          </ol>
        </section>
        <section class="content">
          <div class="col-md-12">
            <div class="box">
              <div class="box-header with-border">
                <h3 class="box-title">Lens (<%= @lens.count %>)</h3>
                <%#= link_to 'New Role', new_role_path , { class: "btn btn-primary newAddBtn"}%>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                <table class="table table-bordered table-hover">
                  <tr>
                    <th>Product name</th>
                    <th>Brand name</th>
                    <th>Lens type</th>
                    <th>Coatings1</th>
                    <!-- <th>Coatings2</th> -->
                    <!-- <th>Coatings3</th>
                    <th>Coatings4</th>
                    <th>Coatings5</th> -->
                    <!-- <th>Material</th> -->
                    <!-- <th>Power range</th> -->
                    <th>No s</th>
                    <th>Mrp</th>
                    <th>Nrp</th>
                    <th>Discount</th>
                    <th>Quantity</th>
                    <th>Store</th>
                    
                    <th>
                      <i class="ion ion-edit"></i>
                    </th>
                    <th>
                      <i class="ion ion-trash-b"></i>
                    </th>
                  </tr>
                 <% @lens.each do |len| %>
                  <tr>
                     <td><%= len.product_name %></td>
                    <td><%= len.brand_name %></td>
                    <td><%= len.lens_type %></td>
                    <td><%= len.coatings1 %></td>
                    <!-- <td><%= len.coatings2 %></td> -->
                   <!--  <td><%= len.coatings3 %></td>
                    <td><%= len.coatings4 %></td>
                    <td><%= len.coatings5 %></td> -->
                  <!--   <td><%= len.material %></td>
                    <td><%= len.power_range %></td> -->
                    <td><%= len.no_s %></td>
                    <td><%= len.MRP %></td>
                    <td><%= len.NRP %></td>
                    <td><%= len.discount %></td>
                    <td><%= len.quantity %></td>
                    <td><%= len.store.name %></td>

                    <td><%= link_to "", edit_len_path(len), { class: "ion ion-edit"} %></td>
                    <td>
                      <%= link_to len, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class="ion ion-trash-b"></i>
                      <% end %>
                    </td>
                  </tr>
                  <% end %>
                </table>
              </div>
            </div>
            <!-- /.box -->
          </div>
          <br>
        </section>
      </div>
    </div>
  </body>

